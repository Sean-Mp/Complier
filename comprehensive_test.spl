  checknumber ( 3 ) ; 
  
  print "Test iseven:" ; 
  temp = iseven ( num1 ) ; 
  print temp ; 
  temp = iseven ( num2 ) ; 
  print temp ; 
  
  print "Test do-until:" ; 
  loopcounter = 0 ; 
  do { 
    print "Do-until it:" ; 
    print loopcounter ; 
    loopcounter = ( loopcounter plus 1 ) 
  } until ( loopcounter > 2 ) ; 
  
  print "Test counter:" ; 
  print counter ; 
  
  print "Test complex:" ; 
  fact3 = factorial ( 3 ) ; 
  globalresult = ( ( num1 mult num2 ) plus fact3 ) ; 
  print globalresult ; 
  
