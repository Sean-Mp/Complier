glob { 
  counter 
  globalresult 
} 

proc { 
  increment () { 
    local {} 
    counter = ( counter plus 1 ) 
  }
  greet (name times) { 
    local { i } 
    i = 0 ; 
    while ( times > i ) { 
      print "Hello" ; 
      print name ; 
      i = ( i plus 1 ) 
    } 
  }
  checknumber (n) { 
    local {} 
    if ( n > 10 ) { 
      print "Big" 
    } else { 
      if ( n > 5 ) { 
        print "Medium" 
      } else { 
        print "Small" 
      } 
    } 
  } 
} 

func { 
  factorial (x) { 
    local { result i } 
    result = 1 ; 
    i = 1 ; 
    while ( x > i ) { 
      result = ( result mult i ) ; 
      i = ( i plus 1 ) 
    } ; 
    return result 
  }
  max (a b) { 
    local {} 
    if ( a > b ) { 
      halt 
    } else { 
      halt 
    } ; 
    return a 
  }
  iseven (n) { 
    local { temp } 
    temp = ( n div 2 ) ; 
    temp = ( temp mult 2 ) ; 
    if ( temp eq n ) { 
      halt 
    } else { 
      halt 
    } ; 
    return 1 
  } 
} 

main { 
  var { num1 num2 temp result loopcounter fact3 fact4 } 
  
  num1 = 5 ; 
  num2 = 8 ; 
  
  print "Testing fac:" ; 
  result = factorial ( num1 ) ; 
  print result ; 
  
  print "Testing max:" ; 
  temp = max ( num1 num2 ) ; 
  print temp ; 
  
  print "Test greet:" ; 
  greet ( num2 3 ) ; 
  
