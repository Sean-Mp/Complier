  fact3 = factorial ( 3 ) ; 
  fact4 = factorial ( 4 ) ; 
  temp = max ( fact3 fact4 ) ; 
  print temp ; 
  
  print "Test unary:" ; 
  temp = ( neg 10 ) ; 
  print temp ; 
  temp = ( not 0 ) ; 
  print temp ; 
  
  print "Test compare:" ; 
  if ( num1 eq num2 ) { 
    print "Equal" 
  } else { 
    print "Not equal" 
  } ; 
  
